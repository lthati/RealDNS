{
  "name": "Server IP",
  "short_name": "isip",
  "description": "Displays server IP address on every website",
  "author": "Andy Portmen",
  "version": "0.1.0",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "common.js"
    ]
  },
  "homepage_url": "http://add0n.com/country-flags.html?from=server-ip",
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "128": "data/icons/128.png"
  },
  "web_accessible_resources": [
    "data/ip/*"
  ],
  "content_scripts": [{
    "run_at": "document_start",
    "matches": ["<all_urls>"],
    "js": ["data/inject.js"]
  }]
}
